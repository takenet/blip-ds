{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/jsx.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "loader",
    "www",
    "storybook-static",
    "blip-ds-react",
    ".storybook",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.e2e.ts",
    "**/*.d.ts"
  ]
}