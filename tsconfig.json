{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}