{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ],
    "useDefineForClassFields": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}